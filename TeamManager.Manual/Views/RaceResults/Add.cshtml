@model AddResultViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Add race result"];
}

<h1>@Localizer["Add race result"]</h1>
<div class="m-2">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            @await Html.PartialAsync("_AddRaceResultPartial")
            <input type="submit" value="@Localizer["Save"]" class="btn btn-primary btn-sm m-2" />
            <a asp-action="Index" asp-controller="Races" class="btn btn-link btn-sm">@Localizer["Back"]</a>
        </form>
    </div>
</div>

