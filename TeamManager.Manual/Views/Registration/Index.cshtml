@using TeamManager.Manual.Data
@inject IViewLocalizer Localizer
@inject Microsoft.Extensions.Localization.IStringLocalizer<TeamManager.Manual.SharedResources> StringLocalizer
@model RegistrationViewModel

@{ 
    ViewBag.Title = Localizer["Registration"];
}

<h1>@Localizer["Registration"]</h1>
<div>
    @Localizer["Welcome to the online system of Green Riders. For access to full system, you need to register. Your private data will be used to contact you and to race entries.<br />All data is required, except AKESZ, UCI licence, Triatlon licence and Ötpróba number.<br />If you completed the form, click the Registration button below. If all data formats are correct, your account will be created."]
</div>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Index" method="post">
    <div class="row">
        <div class="col">
            <h3>@Localizer["Login data"]</h3>
            <div class="form-group">
                <label asp-for="Email">@Localizer["E-mail"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">@Localizer["Password confirmation"]</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        @await Html.PartialAsync("_UserFieldsPartial", Model)
    </div>
    <hr />
    <input type="submit" value="@Localizer["Registrate"]" class="btn btn-primary" />
</form>
