@model UserModel

@{
    ViewData["Title"] = $"Edit {Model.FullName}";
}

<h1>@Model.FullName</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <div class="row">
        <div class="col">
            <h3>Personal data</h3>
            <div class="form-group">
                <label asp-for="FirstName">First name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate">Birth date</label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Gender" value="@Model.Gender" />
            <div class="form-group">
                <label asp-for="TShirtSize">T-shirt size</label>
                <select asp-for="TShirtSize" asp-items="@Html.GetEnumSelectList<Size>()" class="form-control">
                    <option label="Select your T-shirt size" value=""></option>
                </select>
                <span asp-validation-for="TShirtSize" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <h3>Address</h3>
            <div class="form-group">
                <label asp-for="ZipCode">Zip code</label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseNumber">House number</label>
                <input asp-for="HouseNumber" class="form-control" />
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <h3>Identifiers</h3>
            <div class="form-group">
                <label asp-for="AKESZ"></label>
                <input asp-for="AKESZ" class="form-control" />
                <span asp-validation-for="AKESZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UCI">UCI licence</label>
                <input asp-for="UCI" class="form-control" />
                <span asp-validation-for="UCI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Triathlon">Triathlon licence</label>
                <input asp-for="Triathlon" class="form-control" />
                <span asp-validation-for="UCI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otproba">5proba number</label>
                <input asp-for="Otproba" class="form-control" />
                <span asp-validation-for="Otproba" class="text-danger"></span>
            </div>
        </div>
    </div>
    <hr />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Details" class="btn btn-link">Back</a>
</form>

