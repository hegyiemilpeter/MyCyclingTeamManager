@model IEnumerable<UserModel>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Users"];
}

<h1>@Localizer["Users"]</h1>
@if(Model == null || Model.Count() == 0)
{
    <div>@Localizer["No users in the database."]</div>
}
else
{
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["E-mail"]</th>
                <th>@Localizer["Phone number"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td><a asp-action="Details" asp-controller="Users" asp-route-Id="@user.Id" class="btn btn-outline-primary btn-sm">@Localizer["Details"]</a></td>
                </tr>
            }
        </tbody>
    </table>
}

