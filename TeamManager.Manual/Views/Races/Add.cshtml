@using TeamManager.Manual.Data
@model RaceModel
@{
    ViewBag.Title = "Add race";
}

<h1>Add race</h1>
<hr />
<form method="post" asp-action="Add">
    @await Html.PartialAsync("_RaceFieldsPartial", Model)
    <hr />
    <div class="row">
        <div class="col-md">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-link">Back to races</a>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript" src="~/js/Distances.js"></script>
}