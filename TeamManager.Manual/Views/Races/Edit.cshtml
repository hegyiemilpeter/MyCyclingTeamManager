@model RaceModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit race"];
}

<h1>@Localizer["Edit race"]</h1>
<hr />
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    @await Html.PartialAsync("_RaceFieldsPartial", Model)
    <hr />
    <div class="row">
        <div class="col-md">
            <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-link">@Localizer["Back to races"]</a>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript" src="~/js/Distances.js"></script>
}

