@model AddPointConsumptionViewModel

@{
    ViewData["Title"] = "Add consumed points";
}

<h1>Add consumed points</h1>
<form asp-action="AddConsumedPoints" method="post">
    <div class="col-4">
        <div class="form-group">
            <label asp-for="SelectedUserId">User</label>
            <select asp-for="SelectedUserId" asp-items="@Model.Users" class="form-control"></select>
            <span class="text-danger" asp-validation-for="SelectedUserId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>
        <div class="form-group">
            <label asp-for="Remark"></label>
            <input asp-for="Remark" class="form-control" />
            <span asp-validation-for="Remark" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>
