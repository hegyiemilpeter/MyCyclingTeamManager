@inject IViewLocalizer Localizer
@model ResetPasswordViewModel

@{
    ViewData["Title"] = Localizer["Reset password"];
}

<h1>Localizer["Reset password"]</h1>
<hr />
<div class="row">
    <form asp-action="ResetPassword" method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="UserId" value="@Model.UserId" />
        <input type="hidden" asp-for="Token" value="@Model.Token" />
        <div class="form-group">
            <label asp-for="Password">@Localizer["Passworď"]</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">@Localizer["Confirm password"]</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
    </form>
</div>

