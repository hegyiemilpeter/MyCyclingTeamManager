@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Forgot password"];
}

<h1>@Localizer["Forgot password"]</h1>
<span>@Localizer["To reset your password, please give the e-mail address you registered with and we will send you a password reset token."]</span>
<hr />
<div class="col-md-4">
    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <label>@Localizer["E-mail address"]</label>
            <input type="text" name="email" class="form-control" />
        </div>
        <input type="submit" value="@Localizer["Reset"]" class="btn btn-primary" />
    </form>
</div>
